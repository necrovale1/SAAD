<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SAAD2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SAAD2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SAAD2">

    <Shell.TitleView>
        <Grid>
            <Label x:Name="ThemeIconLabel"
                   FontFamily="MaterialIcons"
                   FontSize="24"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   Margin="0,0,20,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnThemeIconTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="main">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="{OnPlatform 'icon_home.png', iOS='icon_home_ios.png'}" />

        <ShellContent
            Title="MatÃ©rias"
            ContentTemplate="{DataTemplate views:MateriasPage}"
            Icon="{OnPlatform 'icon_book.png', iOS='icon_book_ios.png'}" />

        <ShellContent
            Title="Faltas"
            ContentTemplate="{DataTemplate views:FaltasPage}"
            Icon="{OnPlatform 'icon_calendar.png', iOS='icon_calendar_ios.png'}" />

        <ShellContent
            Title="Sair"
            ContentTemplate="{DataTemplate views:LogoutPage}"
            Icon="{OnPlatform 'icon_logout.png', iOS='icon_logout_ios.png'}" />
    </TabBar>

</Shell>