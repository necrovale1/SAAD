<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="SAAD2.Resources.Styles.LightTheme"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
    <Color x:Key="PrimaryTextColor">#202020</Color>
    <Color x:Key="SecondaryTextColor">#606060</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="AccentColor">#fc0349</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <Color x:Key="InputBorderColor">#C0C0C0</Color>
    <Color x:Key="InputBackgroundColor">#FFFFFF</Color>

    <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBackgroundColor}" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />
    </Style>

</ResourceDictionary>