<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD.Views.RegistroPresencaPage"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Registro de Presença"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{StaticResource PrimaryTextColor}" />

        <Image x:Name="PhotoImage"
               HeightRequest="250"
               Aspect="AspectFit"
               IsVisible="False"
               Margin="0,10"
               BackgroundColor="{StaticResource CardBackgroundColor}" />

        <Button x:Name="RegistrarPresencaButton"
                Text="Registrar Presença"
                StyleClass="primary-button"
                Clicked="OnRegistrarPresencaClicked" />

        <Button x:Name="TryAgainButton"
                Text="Tentar novamente"
                StyleClass="secondary-button"
                Clicked="OnTryAgainClicked"
                IsVisible="False" />

        <ActivityIndicator x:Name="LoadingIndicator"
                           IsVisible="False"
                           IsRunning="False"
                           Color="{StaticResource AccentColor}" />

    </VerticalStackLayout>
</ContentPage>
