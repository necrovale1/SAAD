<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD.Views.RegistroPresencaPage"
             Title="Registro de Presença">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Registro de Presença"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button x:Name="RegistrarPresencaButton"
                Text="Registrar Presença"
                Clicked="OnRegistrarPresencaClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50" />

        <Button x:Name="RegistrarSaidaButton"
        Text="Registrar Saída"
        Clicked="OnRegistrarSaidaClicked"
        BackgroundColor="#F44336"
        TextColor="White"
        CornerRadius="10"
        HeightRequest="50" />


        <Button x:Name="CadastrarAluno"
        Text="Cadastrar Aluno"
        Clicked="OnCadastrarAlunoClicked"
        BackgroundColor="#2196F3"
        TextColor="White"
        CornerRadius="10"
        HeightRequest="50" />


        <ActivityIndicator x:Name="LoadingIndicator"
                           IsVisible="False"
                           IsRunning="False"
                           Color="Gray"
                           HeightRequest="40" />
    </StackLayout>
</ContentPage>
