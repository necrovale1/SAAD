<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:SAAD.Helpers"
             x:Class="SAAD.Views.RegistroPresencaPage"
             Title="Registro de Presença"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto" BackgroundColor="{DynamicResource AccentColor}">
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="0,24,0,0" />
                    <On Platform="iOS" Value="0,0,0,0" />
                </OnPlatform>
            </Grid.Padding>
            <Label Text="Registro de Presença"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource ButtonTextColor}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <Button x:Name="ThemeButton"
                    Grid.Column="1"
                    Text="{x:Static helpers:FontAwesomeIcons.Moon}"
                    FontFamily="FASolid"
                    FontSize="20"
                    Clicked="OnThemeSwitchClicked"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource ButtonTextColor}"
                    BorderColor="Transparent"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <StackLayout Padding="20" Spacing="25">

            <Label Text="Controle de Acesso"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource PrimaryTextColor}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>

            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="{DynamicResource AccentColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Registrar Movimentação"
                           FontSize="18"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           HorizontalOptions="Center"/>

                    <Button x:Name="RegistrarPresencaButton"
                            Text="Registrar Entrada"
                            Clicked="OnRegistrarPresencaClicked"
                            BackgroundColor="{DynamicResource AccentColor}"
                            TextColor="{DynamicResource ButtonTextColor}"
                            FontAttributes="Bold" />

                    <Button x:Name="RegistrarSaidaButton"
                            Text="Registrar Saída"
                            Clicked="OnRegistrarSaidaClicked"
                            BackgroundColor="#D32F2F" 
                            TextColor="White"
                            FontAttributes="Bold" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Administrativo"
                           FontSize="18"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           HorizontalOptions="Center"/>

                    <Button x:Name="CadastrarAluno"
                            Text="Cadastrar Novo Aluno"
                            Clicked="OnCadastrarAlunoClicked"
                            BackgroundColor="#FF5722" 
                            TextColor="White"
                            FontAttributes="Bold" />
                </VerticalStackLayout>
            </Border>

            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="{DynamicResource AccentColor}"
                               HeightRequest="40" />

        </StackLayout>
    </ScrollView>
</ContentPage>