<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAAD2.Views.RegistroMateriasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Registrar Matéria"
    BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30">

            <Label Text="Detalhes da Matéria" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Entry x:Name="NomeMateriaEntry" Placeholder="Nome da Matéria"/>
            <Entry x:Name="ProfessorEntry" Placeholder="Nome do Professor (Opcional)"/>
            <Entry x:Name="CategoriaEntry" Placeholder="Categoria (Ex: Exatas, Humanas)"/>

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{DynamicResource AccentColor}"/>

            <Button x:Name="SaveButton"
                    Text="Salvar Matéria"
                    Clicked="OnSaveMateriaClicked"
                    HorizontalOptions="Fill"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>