<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SAAD.Models" x:Class="SAAD.Views.ListagemFacialPage"
             Title="Alunos - Cadastro Facial">

    <CollectionView x:Name="AlunosCollection" ItemsLayout="VerticalList">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:AlunoFacialStatus">
                <Grid Padding="10" ColumnDefinitions="*,Auto">

                    <VerticalStackLayout>
                        <Label Text="{Binding Nome}" FontSize="18" />
                        <Label Text="{Binding RegistroAcademico}" FontSize="14" TextColor="Gray" />
                    </VerticalStackLayout>

                    <Label Text="{Binding IconFacial}"
                           FontFamily="FASolid"
                           FontSize="20"
                           TextColor="{Binding CorFacial}"
         
                  Grid.Column="1"
                           VerticalOptions="Center"
                           HorizontalOptions="End" />
                </Grid>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>