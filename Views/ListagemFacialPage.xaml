<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SAAD.Models" 
             x:Class="SAAD.Views.ListagemFacialPage"
             Title="Lista de Alunos"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <CollectionView x:Name="AlunosCollection" ItemsLayout="VerticalList">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:AlunoFacialStatus">

                <Border Padding="15" Margin="10,5" 
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Stroke="Transparent"
                        StrokeShape="RoundRectangle 10">

                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,1" Radius="3" Opacity="0.1" />
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Nome}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}" />

                            <Label Text="{Binding RegistroAcademico}" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource SecondaryTextColor}" />
                        </VerticalStackLayout>

                        <Label Text="{Binding IconFacial}"
                               Grid.Column="1"
                               FontFamily="FASolid"
                               FontSize="24"
                               TextColor="{Binding CorFacial}"
                               VerticalOptions="Center"
                               HorizontalOptions="End" />
                    </Grid>
                </Border>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>