<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="SAAD.Views.CameraCapturePage"
             Title="Reconhecimento Facial">

    <Grid RowDefinitions="Auto, *, Auto" 
          ColumnDefinitions="*"
          BackgroundColor="Black">

        <cv:CameraView x:Name="cameraView"
                       Grid.RowSpan="3"
                       Grid.Column="0"
                       Cameras="Front"
                       AutoStartPreview="True"
                       VerticalOptions="Fill" />

        <BoxView Grid.Row="0" Grid.Column="0" 
                 BackgroundColor="#80000000" />
        <BoxView Grid.Row="2" Grid.Column="0" 
                 BackgroundColor="#80000000" />

        <Border Grid.Row="1" Grid.Column="0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="350"
                WidthRequest="280"
                Stroke="White"
                StrokeThickness="2"
                StrokeDashArray="2,2"
                BackgroundColor="Transparent">
            <Border.StrokeShape>
                <Ellipse />
            </Border.StrokeShape>
        </Border>

        <VerticalStackLayout Grid.Row="2" Grid.Column="0" 
                             Padding="20" Spacing="10">

            <Label x:Name="InstructionLabel"
                   Text="Posicione seu rosto dentro da elipse"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <Label Text="• Fique em um lugar bem iluminado
• Evite usar óculos ou boné
• Mantenha um fundo neutro"
                   TextColor="White"
                   FontSize="14"
                   HorizontalTextAlignment="Center" />

            <Button x:Name="CaptureButton"
                    Text="Capturar Rosto"
                    Clicked="CaptureButton_Clicked"
                    Margin="0,20,0,0" />

            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{StaticResource Primary}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>