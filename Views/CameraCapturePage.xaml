<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:helpers="clr-namespace:SAAD.Helpers"
             x:Class="SAAD.Views.CameraCapturePage"
             Title="Reconhecimento"
             BackgroundColor="{DynamicResource AccentColor}">

    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*">

        <cv:CameraView x:Name="cameraView"
                       Grid.RowSpan="3"
                       AutoStartPreview="True"
                       VerticalOptions="Fill" />

        <BoxView Grid.Row="0" BackgroundColor="{DynamicResource PrimaryTextColor}" />
        <BoxView Grid.Row="2" BackgroundColor="{DynamicResource PrimaryTextColor}" />

        <Border Grid.Row="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="350"
                WidthRequest="280"
                Stroke="{DynamicResource PrimaryTextColor}"
                StrokeThickness="3"
                StrokeDashArray="4,2"
                BackgroundColor="Transparent">
            <Border.StrokeShape>
                <Ellipse />
            </Border.StrokeShape>
        </Border>

        <VerticalStackLayout Grid.Row="2" Padding="20" Spacing="15">
            <Label x:Name="InstructionLabel"
                   Text="Posicione seu rosto na moldura"
                   TextColor="{DynamicResource CardBackgroundColor}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <Label Text="Mantenha o rosto iluminado e centralizado"
                   TextColor="{DynamicResource CardBackgroundColor}"
                   FontSize="14"
                   HorizontalTextAlignment="Center" />

            <Button x:Name="CaptureButton"
                    Text="Identificar"
                    Clicked="CaptureButton_Clicked"
                    BackgroundColor="{DynamicResource AccentColor}"
                    TextColor="{DynamicResource CardBackgroundColor}"
                    CornerRadius="25"
                    HeightRequest="55"
                    FontAttributes="Bold"
                    Margin="0,20,0,0" />

            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{DynamicResource AccentColor}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>