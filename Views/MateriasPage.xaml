<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAAD2.Views.MateriasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="materiasPage" Title="Matérias"
    BackgroundColor="{DynamicResource PageBackgroundColor}">
    <Grid RowDefinitions="*,Auto">

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" IsVisible="True" HorizontalOptions="Center" VerticalOptions="Center" />

        <ListView
            x:Name="MateriasListView"
            Grid.Row="0"
            HasUnevenRows="True"
            ItemsSource="{Binding Materias}"
            SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem 
                                        Text="Editar"
                                        BackgroundColor="{DynamicResource AccentColor}"
                                        IsVisible="{Binding BindingContext.IsSchoolUser, Source={x:Reference Name=materiasPage}}"
                                        Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=materiasPage}}"
                                        CommandParameter="{Binding .}"/>
                                    <SwipeItem 
                                        Text="Excluir"
                                        BackgroundColor="{DynamicResource AccentColor}"
                                        IsVisible="{Binding BindingContext.IsSchoolUser, Source={x:Reference Name=materiasPage}}"
                                        Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=materiasPage}}"
                                        CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame
                                Margin="15,10" Padding="15"
                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                BorderColor="Transparent" CornerRadius="8">
                                <VerticalStackLayout Spacing="5">
                                    <Label FontAttributes="Bold" FontSize="18" Text="{Binding Nome}" TextColor="{DynamicResource PrimaryTextColor}" />
                                    <Label FontSize="14" Text="{Binding Professor}" TextColor="{DynamicResource PrimaryTextColor}" />
                                    <Label FontAttributes="Italic" FontSize="12" HorizontalOptions="End" Text="{Binding Categoria}" TextColor="{DynamicResource PrimaryTextColor}" />
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
            x:Name="BtnRegistrarMateria"
            Grid.Row="1"
            Margin="15"
            BackgroundColor="{DynamicResource AccentColor}"
            Clicked="OnRegistrarClicked"
            Text="Registrar Nova Matéria"
            TextColor="{DynamicResource PrimaryTextColor}" />
    </Grid>
</ContentPage>