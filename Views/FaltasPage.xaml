<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD2.Views.FaltasPage"
             x:Name="faltasPage" Title="Faltas">
    <Grid RowDefinitions="*,Auto">

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" IsVisible="True" HorizontalOptions="Center" VerticalOptions="Center"/>

        <ListView
            x:Name="FaltasListView"
            Grid.Row="0"
            ItemsSource="{Binding Faltas}"
            HasUnevenRows="True"
            SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem 
                                        Text="Excluir"
                                        BackgroundColor="{DynamicResource AccentColor}"
                                        IsVisible="{Binding BindingContext.IsProfessorUser, Source={x:Reference Name=faltasPage}}"
                                        Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=faltasPage}}"
                                        CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Margin="15,10" Padding="15" CornerRadius="8">
                                <StackLayout>
                                    <Label Text="{Binding Materia}" FontSize="18" FontAttributes="Bold"/>
                                    <Label Text="{Binding Faltas, StringFormat='Faltas: {0}'}"/>
                                    <Label Text="{Binding Presencas, StringFormat='PresenÃ§as: {0}'}"/>
                                </StackLayout>
                            </Frame>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
            x:Name="BtnRegistrarFalta"
            Grid.Row="1"
            Margin="15"
            Clicked="OnRegistrarFaltaClicked"
            Text="Registrar Nova Falta" />
    </Grid>
</ContentPage>