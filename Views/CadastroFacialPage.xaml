<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD.Views.CadastroFacialPage"
             Title="Cadastro Facial">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Detecção Facial" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Selecionar Imagem" Clicked="OnSelecionarImagemClicked" />
        <Image x:Name="ImagemSelecionada" HeightRequest="300" Aspect="AspectFit" />
        <Button Text="Detectar Faces" Clicked="OnDetectarFacesClicked" />
        <Label x:Name="ResultadoLabel" FontSize="18" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
