<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD2.Views.CadastroFacialPage"
             Title="Cadastro Facial">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Cadastro Facial do Aluno" FontSize="28" HorizontalOptions="Center" />
        <Entry x:Name="RaEntry" Placeholder="Digite o RA" FontSize="20" />
        <Button Text="Capturar Foto" Clicked="OnCapturePhotoClicked" />
        <Image x:Name="PhotoImage" HeightRequest="200" IsVisible="False" Aspect="AspectFit" />
        <Button x:Name="SaveFaceButton" Text="Salvar Imagem Facial" Clicked="OnSaveFaceClicked" IsVisible="False" />
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
