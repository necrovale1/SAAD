<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAAD2.Views.RegistroPage"
             Title="Registro de Novo Usuário"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <VerticalStackLayout
        Spacing="15"
        Padding="30,0"
        VerticalOptions="Center">
        
        <Label 
            Text="Crie sua Conta"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="{DynamicResource PrimaryTextColor}" />

        <Entry x:Name="NomeEntry" Placeholder="Nome de usuário" />
        <Entry x:Name="EmailEntry" Placeholder="E-mail" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmar Senha" IsPassword="True" />


        <ActivityIndicator x:Name="LoadingIndicator" 
            IsRunning="False" 
            IsVisible="False" 
            Color="{DynamicResource AccentColor}"/>

        <Button Text="Registrar" Clicked="OnRegisterButtonClicked" BackgroundColor="{DynamicResource AccentColor}" Margin="0,20,0,0" x:Name="RegisterButton"/>
        <Button Text="Voltar" Clicked="OnVoltarClicked" BackgroundColor="Transparent" TextColor="{DynamicResource AccentColor}" BorderColor="{DynamicResource AccentColor}" BorderWidth="1"/>

    </VerticalStackLayout>
</ContentPage>